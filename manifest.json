{
  "name": "Notes-Kitty",
  "version": "1.0",
  "description": "Note Creator",
  "permissions": ["cookies", "contextMenus", "storage", "declarativeContent", "activeTab", "tabs", "*://*/*"],
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": ["src/content.js"]
  }],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}